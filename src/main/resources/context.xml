<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">


    <context:property-placeholder location="classpath:quotes.properties"/>

    <bean class="real_spring.quoters.InjectRandomIntAnnotationBeanPostProcessor"/>


    <context:component-scan base-package="real_spring.quoters"/>

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean id="s" class="java.lang.String">
        <constructor-arg value="I'll not be back"/>
    </bean>

    <bean id="talkingRobot" class="real_spring.quoters.TalkingRobotImpl">
        <property name="quoters">
            <list>
                <ref bean="shakespeareQuoter"/>
                <ref bean="terminatorQuoter"/>
            </list>
        </property>
    </bean>

    <bean id="shakespeareQuoter" class="real_spring.quoters.ShakespeareQuoter">
        <property name="message" value="${shake}"/>
    </bean>

    <bean id="terminatorQuoter" class="real_spring.quoters.TerminatorQuoter">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>


</beans>